    public partial class FormDamas : Form
    {
        public FormDamas()
        {
            InitializeComponent();
        }

        private void btnVerTallas_Click(object sender, EventArgs e)
        {
            string tallas = "";

            foreach (Control control in groupBoxTallas.Controls)
            {
                if (control is CheckBox cb && cb.Checked)
                {
                    tallas += cb.Text + ", ";
                }
            }

            MessageBox.Show("Tallas elegidas: " + tallas.TrimEnd(',', ' '));
        }

